root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
max_line_length = 80

# Makefiles always use tabs for indentation
[{Makefile,*.mk}]
indent_style = tab

[*.go]
indent_size = 4
indent_style = tab

# Minified JavaScript files shouldn't be changed
[**.min.js]
indent_style = ignore
insert_final_newline = ignore
